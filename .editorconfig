# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_style = tab

[.github/**/*.yml]
indent_size = 2

[{Caddyfile,*.*Caddyfile}]
indent_style = tab

[{compose.yaml,compose.*.yaml}]
indent_size = 2

[{Dockerfile,*.*Dockerfile}]
indent_style = tab

[Makefile]
indent_size = 8
indent_style = tab
